@using NetDream.Modules.Blog.Models;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "分类";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link type="text/css" href="~/assets/css/blog.min.css" rel="stylesheet" media="all">
}
<div id="book-page" class="book-skin">
    <div class="book-title">
        <ul class="book-nav">
            <li class="book-navicon">
                <i class="fa fa-bars"></i>
            </li>
            <li class="active">
                <a>分类</a>
            </li>
        </ul>
    </div>

    <div class="book-body">
        <div class="book-sort">
            <a class="active">分类</a>
            <a asp-area="Blog" asp-controller="Tag" asp-action="Index">标签</a>
            <a asp-area="Blog" asp-controller="Archives" asp-action="Index">归档</a>
        </div>
        @foreach (var item in ViewData["items"] as List<CategoryModel>)
        {
            <div class="cat-item">
                <a >@item.Name</a>
                <span class="count">(@item.BlogCount)</span>
            </div>
        }
    </div>


</div>


@section Scripts {
    <script src="~/assets/js/blog.min.js"></script>
    <script>
        var BASE_URI = '/Blog/';
    </script>
}

