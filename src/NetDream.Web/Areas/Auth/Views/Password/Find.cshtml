@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Retrieve password";
    Layout = "../Shared/_Layout.cshtml";
}
<section class="container">
    <div class="login-box">
        <form class="form-ico login-form" asp-action="send" method="POST">
            <div class="input-group">
                <input type="email" name="email" class="form-control" placeholder="Please input email" required>
                <i class="fa fa-at" aria-hidden="true"></i>
            </div>

            <button type="submit" class="btn btn-full">Send verification email</button>
            <div class="other-box">
                <a asp-area="Auth">Back</a>
            </div>
        </form>

    </div>
</section>

